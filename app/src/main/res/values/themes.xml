<resources>
    <!-- Base application theme. -->
    <style name="Theme.CO3201WeightTrainingApplication" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/foregroundColour</item>
    </style>


    <style name="CalenderViewCustom" parent="Theme.AppCompat">
        <item name="colorAccent">@color/textColour</item>
        <item name="android:textColorPrimary">@color/textColour</item>

    </style>

    <style name="CalenderViewDateCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/backgroundColour2</item>


    </style>

    <style name="CalenderViewWeekCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/textColour2</item>
    </style>

    <style name="PopupMe" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="PopupHelp" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>





</resources>