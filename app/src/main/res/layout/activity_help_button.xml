<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/popup"
    tools:context=".PopupActivity"
    android:orientation="vertical">


    <TextView
        android:id="@+id/workoutTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="[WORKOUT NAME]"
        android:background="@color/backgroundColour2"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/textColour"
        android:fontFamily="@font/bahnschrift"
        android:textSize="30sp"
        android:gravity="center"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/movement1Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="[MOVEMENT 1 TITLE]"
        android:textColor="@color/textColour"
        android:fontFamily="@font/bahnschrift"
        android:background="@color/backgroundColour2"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="20sp"
        android:gravity="center"
        android:padding="10dp"
        android:layout_below="@id/workoutTitle"/>


    <RelativeLayout
        android:id="@+id/RelativeLayoutMovement1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/movement1Title"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/backgroundColour2"
        android:fontFamily="@font/bahnschrift"
        android:padding="10dp"
        android:gravity="center_horizontal"
        >

        <ImageView
            android:id="@+id/tempworkout11"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@mipmap/ic_temp_movement_name_foreground"
            />
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_toRightOf="@id/tempworkout11"
            android:background="@drawable/ic_arrow_foreground"
            />

        <ImageView
            android:id="@+id/tempworkout12"
            android:layout_toRightOf="@+id/tempworkout11"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="100dp"
            android:background="@mipmap/ic_temp_movement_name_foreground"
            />
    </RelativeLayout>




    <TextView
        android:id="@+id/movement2Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="[MOVEMENT 2 TITLE]"
        android:textColor="@color/textColour"
        android:fontFamily="@font/bahnschrift"
        android:background="@color/backgroundColour2"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="20sp"
        android:gravity="center"
        android:padding="10dp"
        android:layout_marginTop="15dp"
        android:layout_below="@id/RelativeLayoutMovement1"/>

    <RelativeLayout
        android:id="@+id/RelativeLayoutMovement2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/movement2Title"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/backgroundColour2"
        android:fontFamily="@font/bahnschrift"
        android:padding="10dp"
        android:gravity="center_horizontal"

        >

        <ImageView
            android:id="@+id/tempworkout21"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@mipmap/ic_temp_movement_name_foreground"
            />
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_toRightOf="@id/tempworkout21"
            android:background="@drawable/ic_arrow_foreground"
            />

        <ImageView
            android:id="@+id/tempworkout22"
            android:layout_toRightOf="@+id/tempworkout21"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="100dp"
            android:background="@mipmap/ic_temp_movement_name_foreground"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/movement3Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="[MOVEMENT 3 TITLE]"
        android:textColor="@color/textColour"
        android:fontFamily="@font/bahnschrift"

        android:textSize="20sp"
        android:gravity="center"
        android:padding="10dp"
        android:background="@color/backgroundColour2"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/RelativeLayoutMovement2"/>

    <RelativeLayout
        android:id="@+id/RelativeLayoutMovement3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/movement3Title"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/backgroundColour2"
        android:fontFamily="@font/bahnschrift"
        android:padding="10dp"
        android:gravity="center_horizontal"
        >

        <ImageView
            android:id="@+id/tempworkout31"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@mipmap/ic_temp_movement_name_foreground"
            />
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_toRightOf="@id/tempworkout31"
            android:background="@drawable/ic_arrow_foreground"
            />

        <ImageView
            android:id="@+id/tempworkout32"
            android:layout_toRightOf="@+id/tempworkout31"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="100dp"
            android:background="@mipmap/ic_temp_movement_name_foreground"
            />
    </RelativeLayout>


    <Button
        android:id="@+id/buttonPopupClose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/bahnschrift"
        android:text="CLOSE"
        android:textColor="@color/textColour"
        android:textSize="30sp"
        android:background="@color/foregroundColour"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:hapticFeedbackEnabled="true"
        android:layout_below="@id/RelativeLayoutMovement3"/>
</RelativeLayout>